package edu.kh.fin.board.model.service;

import edu.kh.fin.board.model.vo.Pagination;

// Service 인터페이스 왜 사용할까?
// 1. 규칙성
// 2. 유지보수
// 3. 결합도 다운
// 4. AOP 사용

public interface BoardService {

	/** 전체 게시글 수 count + 페이징 처리에 필요한 값 계산
	 * @param cp
	 * @return pagination
	 */
	Pagination getPagination(int cp);

}
